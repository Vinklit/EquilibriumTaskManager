<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">


    <!-- Task Categories -->

    <TextView
        android:id="@+id/TitleLabel_fam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Family and Social Activities"
        android:textAppearance="?android:attr/textAppearanceLarge" >
    </TextView>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView_fam"
        android:layout_width="match_parent"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.15"
        app:layout_constraintVertical_bias="0.01"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:fadeScrollbars="false"
        app:layout_constraintTop_toBottomOf="@id/TitleLabel_fam"
        tools:itemCount="3"
        />


    <TextView
        android:id="@+id/TitleLabel_prof"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Professionnal Tasks"
        app:layout_constraintTop_toBottomOf="@id/recyclerView_fam"
        android:textAppearance="?android:attr/textAppearanceLarge" >
    </TextView>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView_prof"
        android:layout_width="match_parent"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.15"
        app:layout_constraintVertical_bias="0.01"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:fadeScrollbars="false"
        app:layout_constraintTop_toBottomOf="@id/TitleLabel_prof"
        />

    <TextView
        android:id="@+id/TitleLabel_educ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Education and Personal Development"
        app:layout_constraintTop_toBottomOf="@id/recyclerView_prof"
        android:textAppearance="?android:attr/textAppearanceLarge" >
    </TextView>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView_educ"
        android:layout_width="match_parent"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.15"
        app:layout_constraintVertical_bias="0.01"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:fadeScrollbars="false"
        app:layout_constraintTop_toBottomOf="@id/TitleLabel_educ"
        />


    <TextView
        android:id="@+id/TitleLabel_sport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sport and Wellbeing"
        app:layout_constraintTop_toBottomOf="@id/recyclerView_educ"
        android:textAppearance="?android:attr/textAppearanceLarge" >
    </TextView>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView_sport"
        android:layout_width="match_parent"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.15"
        app:layout_constraintVertical_bias="0.01"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:fadeScrollbars="false"
        app:layout_constraintTop_toBottomOf="@id/TitleLabel_sport"
        />

        <TextView
            android:id="@+id/TitleLabel_hobb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hobbies and Personal Projects"
            app:layout_constraintTop_toBottomOf="@id/recyclerView_sport"
            android:textAppearance="?android:attr/textAppearanceLarge" >
        </TextView>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView_hobb"
            android:layout_width="match_parent"
            app:layout_constraintHeight_default="percent"
            app:layout_constraintHeight_percent="0.15"
            app:layout_constraintVertical_bias="0.01"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
            android:fadeScrollbars="false"
            app:layout_constraintTop_toBottomOf="@id/TitleLabel_hobb"
            />


        <TextView
            android:id="@+id/TitleLabel_other"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Other Tasks"
            app:layout_constraintTop_toBottomOf="@id/recyclerView_hobb"
            android:textAppearance="?android:attr/textAppearanceLarge" >
        </TextView>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView_other"
            android:layout_width="match_parent"
            app:layout_constraintHeight_default="percent"
            app:layout_constraintHeight_percent="0.15"
            app:layout_constraintVertical_bias="0.01"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
            android:fadeScrollbars="false"
            app:layout_constraintTop_toBottomOf="@id/TitleLabel_other"
            />


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/addtask"
        android:layout_width="89dp"
        android:layout_height="104dp"
        android:layout_gravity="end|bottom"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</android.support.constraint.ConstraintLayout>



